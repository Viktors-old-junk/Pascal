PROCEDURE INITSGRAPH(SCRR: STRING);
{Инициализация 256-и цветного графического ражима}
VAR
SGDRIVER, SGMODE : WORD;
BEGIN
SGDriver := InstallUserDriver('SVGA256', nil);
IF (SCRR = '320X200') OR (SCRR = '320x200') OR (SCRR = '0') THEN SGMODE := 0;
IF (SCRR = '640X400') OR (SCRR = '640x400') OR (SCRR = '1') THEN SGMODE := 1;
IF (SCRR = '640X480') OR (SCRR = '640x480') OR (SCRR = '2') THEN SGMODE := 2;
IF (SCRR = '800X600') OR (SCRR = '800x600') OR (SCRR = '3') THEN SGMODE := 3;
IF (SCRR = '1024X768') OR (SCRR = '1024x768') OR (SCRR = '4') THEN SGMODE := 4;
INITGRAPH(SGDRIVER,SGMODE,'');
END;

