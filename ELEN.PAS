Program Vks; {- Загаловок}
uses crt; {- модули}
var
massiv :array[1..20] of real; {- массив}
x :integer; {- целая переменная}
plus, minus :real; {- дробная переменная}
begin
textbackground(5); {-Цвет фона}
textcolor(3); {-цвет текста}
clrscr; {- Очистка экрана}

{- Надписи}
writeln('                                 Задача                                     ');
writeln('   Дан   массив  М1..М20.   Если   модудь   суммы   положительных   элементов');
writeln('   больше   модуля   суммы   отрицательных   элементов,   то   заменить   все');
writeln('   положительные элементы на нули.');

gotoxy(25,7); {- Переместить курсор в часть экрана заданную координатами}

textcolor(11);
writeln('Введите элементы массива');
window(27,8,80,8); {- Создать текстовое окно (его не видно) в котором
будет выводиться информация}

for x := 1 to 20 do {- Цикл ввода}
begin
write('Элемент [',x,'] = ');
readln(massiv[x]); {- Считать данные в массив}
end;

for x := 1 to 20 do {- Цикл сложения мас и мин элементов}
begin
if massiv[x] > 0 then plus := plus + massiv[x];
if massiv[x] < 0 then minus := minus + massiv[x];
end;

window(1,1,80,25); {- Создать текстовое окно равное всему экрану}
{- Весь экран разделен на клетки - символы, как в морском бое}
{- По горизонтали 80 клеток по вертикали 25}
gotoxy(25,8);
write('Элементы массива введены');

gotoxy(30,10);
write('Исходный массив');

gotoxy(30,14);
write('Конечный массив');

window(1,11,80,13);

textcolor(2);
for x := 1 to 20 do {- Выводим на экран исходный массив}
write(massiv[x]:8:0);

if abs(plus) > abs(minus) then {- Сравниваем модули сумм и }
for x := 1 to 20 do {- если (см. условие) то обнуляем положительные
элементы }
if massiv[x] > 0 then massiv[x] := 0;

window(1,15,80,17);

textcolor(10);
for x := 1 to 20 do {- Выводим конечный массив}
write(massiv[x]:8:0);

readkey; {- Ждем нажатия на клавишу}
end.